# =============================================================================
# HeadShotHub Backend Environment Variables
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/headshothub

# -----------------------------------------------------------------------------
# Session Management
# -----------------------------------------------------------------------------
SESSION_SECRET=your_random_session_secret_at_least_32_characters_long

# Session cookie domain (leave empty for same-origin, set for cross-domain)
# SESSION_COOKIE_DOMAIN=

# -----------------------------------------------------------------------------
# Email Service (Resend)
# -----------------------------------------------------------------------------
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@headshothub.com

# OTP Configuration
OTP_CODE_EXPIRY_MINUTES=10

# -----------------------------------------------------------------------------
# Firebase Admin SDK (for Google OAuth)
# -----------------------------------------------------------------------------
# Option 1: Path to service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=./firebase-service-account.json

# Option 2: Service account JSON as environment variable (base64 or JSON string)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Option 3: Project ID only (uses application default credentials)
FIREBASE_PROJECT_ID=your-firebase-project-id

# -----------------------------------------------------------------------------
# Cloudflare R2 Storage (S3-compatible)
# -----------------------------------------------------------------------------
# Option 1: Use R2_ENDPOINT directly
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# Option 2: Or use R2_ACCOUNT_ID (will construct endpoint)
# R2_ACCOUNT_ID=your_cloudflare_account_id

R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=headshot-storage

# Public URL for accessing R2 files (custom domain or r2.dev URL)
R2_PUBLIC_URL=https://cdn.headshothub.com

# -----------------------------------------------------------------------------
# Stripe (Payment Processing)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs for each plan
STRIPE_BASIC_PRICE_ID=price_1234567890abcdef
STRIPE_PROFESSIONAL_PRICE_ID=price_1234567890abcdef
STRIPE_EXECUTIVE_PRICE_ID=price_1234567890abcdef

# Testing mode (uses test keys)
TESTING_STRIPE_SECRET_KEY=sk_test_your_test_stripe_secret_key_here

# -----------------------------------------------------------------------------
# Redis (for BullMQ job queue)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# Alternative Redis configuration
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
# REDIS_DB=0

# -----------------------------------------------------------------------------
# AI Services
# -----------------------------------------------------------------------------
# Google Gemini API
GEMINI_API_KEY=AIzaSy_your_gemini_api_key_here

# OpenAI (optional, if using as alternative)
# OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# -----------------------------------------------------------------------------
# Application Features
# -----------------------------------------------------------------------------
# Maximum file size for uploads (in MB)
MAX_UPLOAD_SIZE_MB=50

# Maximum number of photos per batch
MAX_PHOTOS_PER_BATCH=20
MIN_PHOTOS_PER_BATCH=12

# Processing timeout (in minutes)
BATCH_PROCESSING_TIMEOUT_MINUTES=60

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
LOG_LEVEL=info

# Sentry (optional, for error tracking)
# SENTRY_DSN=https://your_sentry_dsn_here

# -----------------------------------------------------------------------------
# Development/Testing
# -----------------------------------------------------------------------------
# Skip email sending in development
SKIP_EMAILS=false

# Enable debug logging
DEBUG=false
