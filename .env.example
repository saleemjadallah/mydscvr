# Database
DATABASE_URL=postgresql://user:password@host:port/database

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Session
SESSION_SECRET=your_random_session_secret_at_least_32_chars

# Server
PORT=5000
NODE_ENV=production
FRONTEND_URL=https://mydscvr.ai

# CORS
ALLOWED_ORIGINS=https://mydscvr.ai,http://localhost:5173

# Email (Resend)
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=support@mydscvr.ai

# Cloudflare R2 Storage
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_bucket_name
R2_PUBLIC_URL=https://your_custom_domain_or_r2_public_url

# OTP
OTP_CODE_EXPIRY_MINUTES=10
