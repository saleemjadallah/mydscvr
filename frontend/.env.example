# =============================================================================
# HeadShotHub Frontend Environment Variables
# =============================================================================

# -----------------------------------------------------------------------------
# Backend API Configuration
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Stripe (Payment Processing)
# -----------------------------------------------------------------------------
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# -----------------------------------------------------------------------------
# Firebase Configuration (for Google OAuth)
# -----------------------------------------------------------------------------
# Get these from Firebase Console > Project Settings > General
VITE_FIREBASE_API_KEY=AIzaSyA_your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# -----------------------------------------------------------------------------
# Application Features
# -----------------------------------------------------------------------------
# OTP expiry time (should match backend)
VITE_OTP_CODE_EXPIRY_MINUTES=10

# Maximum file upload size (in MB)
VITE_MAX_UPLOAD_SIZE_MB=50

# -----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# -----------------------------------------------------------------------------
# Google Analytics
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (for error tracking)
# VITE_SENTRY_DSN=https://your_sentry_dsn_here

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# VITE_ENABLE_GOOGLE_AUTH=true
# VITE_ENABLE_OTP_LOGIN=true
# VITE_ENABLE_ANALYTICS=false
